<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:orientation="vertical"
        tools:context=".MainActivity"
        android:padding="5dp">

        <!-- Learn about layout_gravity & gravity  -->

        <!-- Linear Layout for One Text View and One Edit Text   -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_margin="2dp">

        </LinearLayout>

        <!-- Linear Layout for Buttons -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            style="?android:attr/borderlessButtonStyle">

            <!-- Linear Layout to arrange button equally horizontally -->

            <!-- 1st Row -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="1">

                <Button
                    android:id="@+id/btn_all_clear"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="?android:attr/borderlessButtonStyle"
                    android:fontFamily="sans-serif-condensed-light"
                    android:textColor="#00ffce"
                    android:textSize="33dp"
                    android:text="C"
                    />

                <Button
                    android:id="@+id/btn_percentile"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="?android:attr/borderlessButtonStyle"
                    android:fontFamily="sans-serif-condensed-light"
                    android:textColor="#00ffce"
                    android:textSize="33dp"
                    android:text="%"
                    />

                <ImageButton
                    android:id="@+id/btn_clear"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="?android:attr/borderlessButtonStyle"
                    android:src="@drawable/ic_baseline_backspace_24"
                    />

                <Button
                    android:id="@+id/btn_divide"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="?android:attr/borderlessButtonStyle"
                    android:fontFamily="sans-serif-condensed-light"
                    android:textColor="#00ffce"
                    android:textSize="33dp"
                    android:text="/"
                    />

            </LinearLayout>


            <!-- 2nd Row -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="1">

                <Button
                    android:id="@+id/btn_7"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="?android:attr/borderlessButtonStyle"
                    android:fontFamily="sans-serif-condensed-light"
                    android:textSize="33dp"
                    android:text="7"
                    />

                <Button
                    android:id="@+id/btn_8"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="?android:attr/borderlessButtonStyle"
                    android:fontFamily="sans-serif-condensed-light"
                    android:textSize="33dp"
                    android:text="8"
                    />

                <Button
                    android:id="@+id/btn_9"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="?android:attr/borderlessButtonStyle"
                    android:fontFamily="sans-serif-condensed-light"
                    android:textSize="33dp"
                    android:text="9"
                    />

                <Button
                    android:id="@+id/btn_multiplication"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="?android:attr/borderlessButtonStyle"
                    android:fontFamily="sans-serif-condensed-light"
                    android:textColor="#00ffce"
                    android:textSize="33dp"
                    android:text="X"
                    />

            </LinearLayout>


            <!-- 3rd Row -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="1">

                <Button
                    android:id="@+id/btn_4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="?android:attr/borderlessButtonStyle"
                    android:fontFamily="sans-serif-condensed-light"
                    android:textSize="33dp"
                    android:text="4"
                    />

                <Button
                    android:id="@+id/btn_5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="?android:attr/borderlessButtonStyle"
                    android:fontFamily="sans-serif-condensed-light"
                    android:textSize="33dp"
                    android:text="5"
                    />

                <Button
                    android:id="@+id/btn_6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="?android:attr/borderlessButtonStyle"
                    android:fontFamily="sans-serif-condensed-light"
                    android:textSize="33dp"
                    android:text="6"
                    />

                <Button
                    android:id="@+id/btn_subtraction"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="?android:attr/borderlessButtonStyle"
                    android:fontFamily="sans-serif-condensed-light"
                    android:textColor="#00ffce"
                    android:textSize="33dp"
                    android:text="-"
                    />

            </LinearLayout>

            <!-- 4th Row -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="1">

                <Button
                    android:id="@+id/btn_1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="?android:attr/borderlessButtonStyle"
                    android:fontFamily="sans-serif-condensed-light"
                    android:textSize="33dp"
                    android:text="1"
                    />

                <Button
                    android:id="@+id/btn_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="?android:attr/borderlessButtonStyle"
                    android:fontFamily="sans-serif-condensed-light"
                    android:textSize="33dp"
                    android:text="2"
                    />

                <Button
                    android:id="@+id/btn_3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="?android:attr/borderlessButtonStyle"
                    android:fontFamily="sans-serif-condensed-light"
                    android:textSize="33dp"
                    android:text="3"
                    />

                <Button
                    android:id="@+id/btn_addition"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="?android:attr/borderlessButtonStyle"
                    android:fontFamily="sans-serif-condensed-light"
                    android:textColor="#00ffce"
                    android:textSize="33dp"
                    android:text="+"
                    />
            </LinearLayout>


            <!-- 5th Row -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="1">

                <Button
                    android:id="@+id/btn_00"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="?android:attr/borderlessButtonStyle"
                    android:fontFamily="sans-serif-condensed-light"
                    android:textSize="33dp"
                    android:text="00"
                    />

                <Button
                    android:id="@+id/btn_0"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="?android:attr/borderlessButtonStyle"
                    android:fontFamily="sans-serif-condensed-light"
                    android:textSize="33dp"
                    android:text="0"
                    />

                <Button
                    android:id="@+id/btn_decimal_point"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="?android:attr/borderlessButtonStyle"
                    android:fontFamily="sans-serif-condensed-light"
                    android:textSize="33dp"
                    android:text="."
                    />

                <Button
                    android:id="@+id/btn_equals_to"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="?android:attr/borderlessButtonStyle"
                    android:fontFamily="sans-serif-condensed-light"
                    android:textColor="#00ffce"
                    android:textSize="33dp"
                    android:text="="
                    />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

